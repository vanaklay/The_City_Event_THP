<div class="container">
  
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <br><br><br>
      <%= form_for @event, html: { class: "form-signin mt-3" } do |f| %>
        <% if alert %>
          <div class="alert alert-danger" role="alert">
            <p><%= alert %></p>
            <ul class="list-unstyled">
              <% @event.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <h1 class="h3 mb-3 font-weight-normal text-center">Create an Event</h1>
        
        <div class="form-group">
          <%= f.label :start_date %> <p class="red">* Require</p>
          <%= f.datetime_field :start_date, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :duration %> <p class="red">* Require duration multiple of 5</p>
          <%= f.text_field :duration, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :title %> <p class="red">* Require between 5 to 140 characters</p>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :description %> <p class="red">* Require between 20 to 1000 characters</p>
          <%= f.text_area :description, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :price %> <p class="red">* Require between 1 to 1000 in â‚¬</p>
          <%= f.text_field :price, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :location %><br />
          <%= f.text_field :location, class: "form-control" %>
        </div>
        <div class="actions mt-5">
          <%= f.submit "Create", class: "btn btn-lg btn-primary btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>