<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <br><br><br>
      
      <%= form_for @user, html: { class: "form-signin mt-3" } do |f| %>
        <h1 class="h3 mb-3 font-weight-normal text-center">Edit profile</h1>
        <% if alert %>
          <div class="alert alert-danger" role="alert">
            <p><%= alert %></p>
            <ul class="list-unstyled">
              <% @guser.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="form-group">
          <%= f.label :first_name %><br />
          <%= f.text_field :first_name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :last_name %><br />
          <%= f.text_field :last_name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :description %><br />
          <%= f.text_area :description, class: "form-control" %>
        </div>
        <div class="actions mt-5">
          <%= f.submit "Edit", class: "btn btn-lg btn-primary btn-block" %>
        </div>
      <% end %>
      <%= link_to "< Back", :back %>
    </div>
  </div>
</div>
